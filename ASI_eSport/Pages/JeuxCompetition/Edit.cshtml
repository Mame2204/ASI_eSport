@page
@model ASI_eSport.Pages.JeuxCompetition.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Jeu_competition</h4>
<hr />
<h4>Remplacement d'un jeu dans:  @Model.Jeu_competition.LaCompetition.LibelleCompetion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Jeu_competition.ID" />
            <input type="hidden" asp-for="Jeu_competition.LaCompetitionID" />
            <div class="form-group">
                <label asp-for="Jeu_competition.LeJeuID" class="control-label"></label>
                <select asp-for="Jeu_competition.LeJeuID" class="form-control" asp-items="ViewBag.LeJeuID"></select>
                <span asp-validation-for="Jeu_competition.LeJeuID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index" asp-route-id="@Model.Jeu_competition.LaCompetitionID">Retour à la compétition</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}