@page
@model ASI_eSport.Pages.Equipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipe.ID" />
            <div class="form-group">
                <label asp-for="Equipe.NomEquipe" class="control-label"></label>
                <input asp-for="Equipe.NomEquipe" class="form-control" />
                <span asp-validation-for="Equipe.NomEquipe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipe.JeuChoisi" class="control-label"></label>
                <select asp-for="Equipe.JeuChoisiID" class="form-control" asp-items="ViewBag.JeuChoisiID"></select>
                <span asp-validation-for="Equipe.JeuChoisiID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
